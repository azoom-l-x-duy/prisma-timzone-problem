// MySQL
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Movie {
  id              Int         @id @default(autoincrement())
  name            String

  // Relation
  quotes Quote[]
  @@map("movies")
}

model Quote {
  id              Int         @id @default(autoincrement())
  quote           String
  saidBy          String
  movieId         Int         @map("movie_id")
  createdDatetime DateTime    @map("created_datetime") @default(now())
  updatedDatime   DateTime?   @map("updated_datetime") @updatedAt

  createdAtTimestampOrm             DateTime?     @map("created_at_timestamp_orm") @db.Timestamp() /// If you use @default(now()) you will get "Database error: Invalid default value for 'created_at_timestamp_orm'"
  createdAtTimestampDb              DateTime      @map("created_at_timestamp_db") @db.Timestamp() @default(dbgenerated("NOW()"))

  movie Movie @relation(fields: [movieId], references: [id])
  @@map("quotes")
}
